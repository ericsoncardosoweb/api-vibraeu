# ========================================
# VibraEU API — Configuração
# ========================================

# Security - Se configurada, protege todas as rotas com X-API-Key
# Deixe vazio para modo dev (sem proteção)
API_KEY=

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# LLM Providers (pelo menos um é necessário para AIMS)
OPENAI_API_KEY=
GROQ_API_KEY=
GEMINI_API_KEY=

# Bunny CDN Storage
BUNNY_ENABLED=true
BUNNY_STORAGE_ZONE=vibraeu-storage
BUNNY_STORAGE_API_KEY=
BUNNY_STORAGE_HOSTNAME=br.storage.bunnycdn.com
BUNNY_CDN_URL=https://vibraeu.b-cdn.net

# CORS (separar múltiplas origens por vírgula, ou * para todas)
CORS_ORIGINS=*

# Scheduler AIMS
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_SECONDS=60

# API Base URL (para fallback de URLs locais)
API_BASE_URL=https://api.vibraeu.com.br
